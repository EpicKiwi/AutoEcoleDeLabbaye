			<h3>Heuuu ... Il n'y a rien !</h3>
			{% endblock %}
			<aside class="span3">
				<h3>Contactez Nous !</h3>
				<table>
					<tr><td>Tel: </td><td> {{ Agence.tel }}</td></tr>
					<tr><td>Fax : </td><td> {{ Agence.fax }}</td></tr>
					<tr><td>Em@il : </td><td> {{ Agence.email }}</td></tr>
					<tr><td>Adresse : </td><td> {{ Agence.adresse }}</td></tr>
				</table>
				<!--<div><a href="mailto:{{ Agence.email }}"  id="email" >Em@il</a></div>-->
				{{render(controller('AbbayeIndexBundle:Index:flashnews'))}}
			</aside>
		</section>

		<header class="row-fluid">
			<div class="span2" id="logo">
				<img src="{% if Agence.logo == NULL %}{{ asset( 'css/default.png' ) }}{% else %}{{ asset( Agence.logo ) }}{% endif %}" alt="L'abbaye"/>
			</div>
			<div class="span10" id="slogan">
				<h1>{{ Agence.nom }}</h1>
				<h2>Ecole de conduite</h2>
			</div>
		</header>
		<section class="row-fluid">
			{{render(controller('AbbayeIndexBundle:Index:menu'))}}

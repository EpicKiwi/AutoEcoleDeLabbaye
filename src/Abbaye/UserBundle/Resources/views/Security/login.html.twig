{% extends "AbbayeUserBundle:Security:index.html.twig" %}{% block titre %}Connection{% endblock %}{% block soustitre %}Connection{% endblock %} {% block body %}<article>   {# S'il y a une erreur, on l'affiche dans un joli cadre #}  {% if error %}    <div class="alert alert-error">{{ error.message }}</div>  {% endif %}   <form action="{{ path('loginCheck') }}" method="post">    <label for="username">Nom d'utilisateur :</label>    <input type="text" id="username" name="_username" value="{{ last_username }}" />     <label for="password">Mot de passe :</label>    <input type="password" id="password" name="_password" />    <br />    <input type="submit" value="Connexion" />  </form> </article>{% endblock %}